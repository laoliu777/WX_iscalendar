.type-btn {
  border: 2px solid #666;
  text-align: center;
  background-color: #eeeeee;
  border-left: none;
}

.type-btn:first-child {
  border-radius: 3px 0 0 3px;
  border-left: 2px solid #666;
}

.type-btn:last-child {
  border-radius: 0 3px 3px 0;
}

.selected-type {
  background: #666;
  color: #FFFFFF;
}