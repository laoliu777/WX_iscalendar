.rich-content {
  margin: 5px 5px 5px 5px;
  display: flex;
  height: 400px;
  width: 300px;
  background-color: #ffff;
  box-shadow: 0px 3px 5px 1px #cecdcc99;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ececec;
}

.ql-active {
  color: #22c704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ececec;
  border-left: none;
  border-right: none;
}

.upload-image {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 0;
  padding-bottom: 80%;
  margin: 10%;
  background-color: #eeee;
  border: 2px dashed #999;
}

.upload-image image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
}

.image-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 0;
  padding-bottom: 80%;
  margin: 10%;
  border: 2px solid #999;
}

.image-wrapper image {
    width: auto;  
    height: auto;  
    max-width: 100%;  
    max-height: 100%;  
}

.dairy-button {
  margin: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* float: right; */
  border-radius: 3px 3px 3px 3px;
  
}

.dairy-cancel {
  border: none;
  border-color: transparent;
  border-radius: 0 0 0 0;
  color: darkgray;
  width: 50%;
  background-color: #ffff;
}

.dairy-enter {
  border: none;
  border-color: transparent;
  border-radius: 0 0 0 0;
  width: 50%;
  color: rgb(238, 135, 135);
  background-color: #ffff;
}

.btn-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 8px #999 inset;
}

.plain-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 10px #bbbec4 inset;
}

.content-wrapper {
  background-color: #fff;
  border-radius: 3px;
  margin-top: 10px;
}

.weui-uploader {
  padding: 15px;
}