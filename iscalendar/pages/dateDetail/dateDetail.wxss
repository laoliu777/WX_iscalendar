@import '../../app.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  
  margin-top: 200px;
}

.date-block{
  margin: 5px 5px 5px 5px;
  display: flex;
  flex-direction: row;
  box-shadow:0px 3px 5px 1px #cecdcc99;
}

.today-Date {
  position: relative;
  width:35%;
  border-radius: 3px 3px 3px 3px;
  background-color: #5626e5;
  padding: 5px 15px;
  text-align: left;
  color: #fff;
  overflow: hidden;
}

.today-anniversary {
  position: relative;
  width: 65%;
  border-radius: 0 3px 3px 0;
  background-color: #fff;
  padding: 5px 15px;
  text-align: left;
  color: rgb(41, 40, 40);
  overflow: hidden;
}

.text-diary{
  /* display: flex; */
  flex-direction: row;
  background-color: #ffff;  
  box-sizing: border-box;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 15px;
  margin-top: 10px;
}

.clock-wrapper {
  background-color: #FFFFFF;
  min-height: 117px;
  padding: 10px 5px;
  border-radius: 3px;
  overflow: visible;
}

.weui-grid__icon {
  position: absolute;
  display: block;
  width: 36px;
  height: 36px;
  margin: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #999;
  font-size: 10px;
  white-space
  : nowrap;
  text-overflow: ellipsis;
  /* overflow: hidden; */
}

.weui-grid__name {
    font-size: 16px;
    font-weight: 600;
    color: #333;
}

.icon-wrapper {
  position: relative;
  display: inline-block;
  border: 2px solid #666;
  height: 60px;
  width: 60px;
  border-radius: 50%;
  background-color: #FFFFFF; 
}

.weui-uploader__img {
  border: 2px solid #666666;
  margin: 0px 10px 10px 0;
}