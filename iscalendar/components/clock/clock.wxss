/* components/clock/clock.wxss */
.clock-wrapper {
  background-color: #FFFFFF;
  min-height: 117px;
  padding: 10px 5px;
  border-radius: 3px;
  overflow: visible;
  box-shadow: 0px 3px 5px 1px #cecdcc99;
  border: 3px 3px 3px 3px rgba(85, 84, 84, 0.667);
}

.weui-grid__icon {
  position: absolute;
  display: block;
  width: 36px;
  height: 36px;
  margin: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #999;
  font-size: 10px;
  white-space
  : nowrap;
  text-overflow: ellipsis;
  /* overflow: hidden; */
}

.weui-grid__name {
    font-size: 16px;
    font-weight: 600;
    color: #333;
}

.icon-wrapper {
  position: relative;
  display: inline-block;
  border: 2px solid #666;
  height: 60px;
  width: 60px;
  border-radius: 50%;
  background-color: #FFFFFF; 
}