  margin-left: 10px;
  margin-top: 2px;
}

.item-left-name {
  font-size: 28rpx;
  margin-left: 14px;
  margin-top: 7px;
  color: rgb(223, 222, 222);
  font-weight: 600;
}

.item-left-week {
